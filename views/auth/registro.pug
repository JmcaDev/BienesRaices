extends ../layout/index.pug

block contenido
    div(class= "py-10")
        h1(class= "text-4xl my-10 font-extrabold text-center") Bienes
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/registro" noValidate)
                    div(class="")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="nombre") Nombre
                        input(id="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : "")
                    div(class="")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Correo electronico
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Correo electronico" type="email" name="email" value= usuario ? usuario.email : "")
                    div(class="")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Contraseña
                        input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Contraseña" type="password" name="password")
                    div(class="")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repetir_password") Repetir contraseña
                        input(id="repetir_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repetir contraseña" type="password" name="repetir_password")
                    
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes una cuenta? Inicia Sesión 
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-md" type="submit" value="Crear Cuenta")
                    input(type="hidden" name="_csrf" value= csrfToken)